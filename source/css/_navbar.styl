.navbar a
  text-decoration none

.navbar
  .brand
    font-variant small-caps
    a
      font-size 1.5rem
      font-weight 900

.navbar > .container > .navbar-header
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-between
  height 3.5rem
  
.navbar
  .navbar-toggle
    border none

.navbar-toggle
  height 100%
  display flex
  flex-flow column nowrap
  align-items center
  justify-content space-around
  padding 0.9rem
  background lightness($fontColor, 90%)
  margin-right -1rem
  .icon-bar
    display block
    width 2.1rem
    height 0.3rem
    background $linkColor

.navbar
  .nav
    list-style none
    padding-left 0
    font-size 1.2rem
    li
      height 2.5rem
      a
        display flex
        display flex
        align-items center
        width 100%
        height 100%

