.navbar a
  text-decoration none

.navbar
  .brand
    font-variant small-caps
    a
      font-size 1.5rem
      font-weight 900

.navbar > .container > .navbar-header
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-between
  height 3.5rem
  .search-form
    display none
    border none
    @media screen and (min-width: 1024px)
      display flex
  .main-nav
    display none
    @media screen and (min-width: 1024px)
      display inline-flex
    .nav
      display flex
      justify-content space-around
      li
        margin 0 1rem
    
.navbar
  .navbar-toggle
    border none

.navbar-toggle
  height 100%
  display flex
  flex-flow column nowrap
  align-items center
  justify-content space-around
  padding 0.9rem
  background lightness($fontColor, 90%)
  margin-right -1rem
  @media screen and (min-width: 1024px)
    display none
  .icon-bar
    display block
    width 2.1rem
    height 0.3rem
    background $linkColor

.navbar
  
  .nav
    list-style none
    padding-left 0
    font-size 1rem
    li.form-container
      text-align center
      .search-form-input
        width 100%
    li
      height 2.5rem
      a
        display flex
        display flex
        align-items center
        width 100%
        height 100%

.search-form
  .search-form-input
    border none
    border-bottom 1px solid #eee
    font-size 0.8rem
    padding 0.5rem
    font-family Muli
    @media screen and (min-width: 1024px)
      font-size 1rem
    